{
  "name": "@eecc/vc-verifier-rules",
  "version": "2.6.1",
  "description": "GS1 US Rules Verification Library for validating GS1 based verifiable credentials.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/european-epc-competence-center/vc-verifier-rules.git"
  },
  "keywords": [
    "verifiable",
    "credential",
    "json-ld",
    "GS1"
  ],
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "build": "tsup",
    "dev": "nodemon",
    "start": "npm run build",
    "lint": "eslint ./src --fix",
    "type-check": "tsc --noEmit",
    "release": "node scripts/release.cjs",
    "release:patch": "npm run release patch",
    "release:minor": "npm run release minor",
    "release:major": "npm run release major"
  },
  "author": "GS1 US",
  "license": "Apache-2.0",
  "files": [
    "dist/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "ajv": "8.17",
    "ajv-dist": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "digital-link.js": "^1.4.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
